                <Button.Background>
                    <ImageBrush ImageSource="/Slide23.JPG"/>
                </Button.Background>
            </Button>
            <Button Content="" HorizontalAlignment="Center" Height="300" VerticalAlignment="Top" Width="533" Margin="0,1020,0,0" FontFamily="Arial" FontSize="18">
                <Button.Background>
                    <ImageBrush ImageSource="/Slide24.JPG"/>
