                    <ImageBrush ImageSource="/Slide21.JPG"/>
                </Button.Background>
            </Button>
            <Button Content="" HorizontalAlignment="Center" Height="300" VerticalAlignment="Center" Width="533"  Margin="0,1640,0,0" FontFamily="Arial" FontSize="18">
